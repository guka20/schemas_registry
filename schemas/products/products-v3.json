{
  "type": "record",
  "name": "Product",
  "namespace": "com.company.schema.product",
  "fields": [
    {
      "name": "sku",
      "type": "string"
    },
    {
      "name": "name",
      "type": "string"
    },
    {
      "name": "status",
      "type": {
        "type": "enum",
        "name": "InventoryStatus",
        "symbols": ["IN_STOCK", "OUT_OF_STOCK", "LOW_STOCK"]
      },
      "default": "IN_STOCK"
    },
    {
      "name": "pricing",
      "type": {
        "type": "record",
        "name": "PricingDetails",
        "fields": [
          {"name": "price_usd", "type": "double"},
          {"name": "currency", "type": "string", "default": "USD"}
        ]
      },
      "doc": "Replaces 'unit_price' field in V3 for multi-currency support."
    }
  ]
}